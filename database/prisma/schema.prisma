generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
Farmer
Consumer
Retailer
Admin
Distributor
}


model User{
  id Int @default(autoincrement()) @unique
  firstName String
  lastName String
  username String @unique
  role Role @default(Consumer)
  email String @unique
  password String
  refreshToken String?
}

